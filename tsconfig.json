{
  "compilerOptions": {
      "lib": [
          "es2017"
      ],
      "target": "es2017",
      "types": [
        "@types/node",
        "@types/mocha",
        "@types/chai"
      ],
      "typeRoots": [
        "node_modules/@types"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "removeComments": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noUnusedLocals": true,
      "strictPropertyInitialization": false
  },
  "include": [
    "app/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.ts"
  ]
}